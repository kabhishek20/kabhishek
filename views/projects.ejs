<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <link rel="icon" href="/images/icon.png" />
    <title>Projects &#127916;</title>
  </head>
  <body class="body">
    <div class="cursor"></div>
    <%- include('partials/navbar.ejs') %>

    <p
      class="mt-5"
      style="text-align: center; color: #ada0a0; text-decoration: underline"
    >
      Projects on Development
    </p>
    <div
      class="container d-flex justify-content-center align-items-center datacard"
    >
      <div
        class="row row-cols-1 row-cols-md-3 g-4"
        style="height: 70vh; overflow: auto"
      >
        <% for( let index = 0; index < 3; index++ ) { %>
        <div class="col customcard">
          <div class="card h-100" style="background-color: black">
            <img
              src="/images/project<%= index+1 %>_<%= index+1 %>.jpg"
              class="card-img-top"
              alt="..."
              height="210rem"
            />
            <div
              class="card-body"
              style="
                background-color: rgb(0, 0, 0);
                color: #ada0a0;
                text-align: center;
                font-family: 'Alata';
              "
            >
              <h5
                class="card-title"
                style="
                  font-size: 1.3rem;
                  font-weight: 700;
                  letter-spacing: 0.1rem;
                "
              >
                <%= field[index] %>
              </h5>
              <p
                class="card-text"
                style="
                  color: white;
                  font-size: 0.8rem;
                  letter-spacing: 0.1rem;
                  opacity: 0.6;
                "
              >
                <%= aboutfield[index] %>
              </p>
              <button class="btn" style="border: 1px solid #ada0a0">
                <a href="/projects/<%= target[index] %>" style="text-decoration: none; color: #212121"
                  >Browse More</a
                >
              </button>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <%- include('partials/script.ejs') %>
  </body>
</html>
